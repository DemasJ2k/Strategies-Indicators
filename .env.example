# ===========================================
# Flowrex Trading Platform - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your actual values

# ===========================================
# Backend Server Config
# ===========================================

PORT=4000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# ===========================================
# Database (Phase 26) - Trading Journal & Performance DB
# ===========================================
# PostgreSQL connection string
# Format: postgres://username:password@host:port/database
# Example: postgres://flowrex:password@localhost:5432/flowrex_journal

DATABASE_URL=

# ===========================================
# Authentication (Phase 28) - ACTIVE
# ===========================================
# JWT secret for user authentication and session management
# IMPORTANT: Use a strong random string in production

JWT_SECRET=

# ===========================================
# OpenAI (AI Chat Assistant) - Phase 27 - ACTIVE
# ===========================================
# Required for AI Chat Assistant and advanced AI features

OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o

# ===========================================
# MT5 Bridge
# ===========================================
# Secret for MT5 EA webhook authentication
# This must match the InpSecretHeader in FlowrexBridgeEA.mq5

MT5_WEBHOOK_SECRET=your-secret-here
MT5_ALLOWED_IPS=0.0.0.0/0

# ===========================================
# TradingView Alerts
# ===========================================
# Secret for TradingView webhook authentication

TV_WEBHOOK_SECRET=your-secret-here

# ===========================================
# Broker Data Providers (Phase 23) - ACTIVE
# ===========================================
# Fetch live & historical OHLC data from brokers

# OANDA (Forex)
OANDA_API_KEY=
OANDA_ACCOUNT_ID=
OANDA_ENV=practice    # or 'live'

# FXCM (Forex)
FXCM_API_KEY=
FXCM_API_SECRET=

# ===========================================
# Crypto Exchange Providers (Phase 23) - ACTIVE
# ===========================================

# Binance (Spot & Futures)
BINANCE_API_KEY=
BINANCE_API_SECRET=

# Bybit (Derivatives)
BYBIT_API_KEY=
BYBIT_API_SECRET=

# ===========================================
# Database (for journaling & performance analytics) - FUTURE USE
# ===========================================
# Required for Phase 24 (Trading Journal + Analytics)

# DATABASE_URL=postgresql://user:password@localhost:5432/flowrex

# ===========================================
# Logging & Debug
# ===========================================

DEBUG_MODE=true
LOG_LEVEL=info
